<!DOCTYPE html>
<html>
<head>
  <title>CrossfitTracker</title>

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <!-- Facebook timeline meta start -->
  <%= yield :fb_timeline_meta %>
  <!-- Facebook timeline meta end -->
</head>
<body>
  <div class="header">
  </div>

  <div class="middle">
    <div class="wrapper">

      <div class="content">
        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% end %>

        <% if alert %>
          <p class="alert"><%= alert %></p>
        <% end %>

        <% if user_signed_in? %>
          <%= current_user.email %>
        <% end %>
        <br />

        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
